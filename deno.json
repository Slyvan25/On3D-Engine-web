{
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "dom.iterable", "deno.ns"]
  },
  "importMap": "import_map.json",
  "tasks": {
    "dev": "deno run --allow-read --allow-net --allow-env --allow-write --watch src/game/main.ts",
